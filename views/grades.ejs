<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Units - Laptop Grading</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold">Units</h1>
      <a href="/grades/new" class="btn btn-primary btn-sm">New Unit</a>
    </div>

    <% if (session && session.user && session.user.role === "ADMIN") { %>
      <div class="card bg-base-200 mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">Admin Filters</h2>

          <form method="GET" action="/grades" class="grid grid-cols-1 md:grid-cols-4 gap-3">
            <div class="form-control">
              <label class="label"><span class="label-text">Project</span></label>
              <select name="projectId" class="select select-bordered">
                <option value="">(all)</option>
                <% (projects || []).forEach(p => { %>
                  <option value="<%= p.id %>" <%= (String(filters.projectId) === String(p.id)) ? "selected" : "" %> >
                    <%= p.projectName %> (<%= p.deviceType %>) <%= p.status === 'CLOSED' ? '[closed]' : '' %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-control">
              <label class="label"><span class="label-text">Device Type</span></label>
              <select name="deviceType" class="select select-bordered">
                <option value="">(all)</option>
                <% (deviceTypes || []).forEach(t => { %>
                  <option value="<%= t %>" <%= (filters.deviceType === t) ? "selected" : "" %> >
                    <%= t %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-control">
              <label class="label"><span class="label-text">Model</span></label>
              <select name="model" class="select select-bordered">
                <option value="">(all)</option>
                <% (models || []).forEach(m => { %>
                  <option value="<%= m %>" <%= (filters.model === m) ? "selected" : "" %> >
                    <%= m %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-control">
              <label class="label"><span class="label-text">Technician</span></label>
              <select name="technician" class="select select-bordered">
                <option value="">(all)</option>
                <% (users || []).forEach(u => { %>
                  <option value="<%= u.userName %>" <%= (filters.technician === u.userName) ? "selected" : "" %> >
                    <%= u.userName %> (<%= u.role %>) <%= u.active ? "" : "[disabled]" %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-control">
              <label class="label"><span class="label-text">Preset</span></label>
              <select name="presetId" class="select select-bordered">
                <option value="">(all)</option>
                <% (presets || []).forEach(p => { %>
                  <option value="<%= p.id %>" <%= (String(filters.presetId) === String(p.id)) ? "selected" : "" %> >
                    <%= p.brand %> <%= p.model %> â€” <%= p.presetLabel %> <%= p.active ? "" : "[disabled]" %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-control">
              <label class="label"><span class="label-text">From</span></label>
              <input type="date" name="fromDate" class="input input-bordered" value="<%= filters.fromDate %>"/>
            </div>

            <div class="form-control">
              <label class="label"><span class="label-text">To</span></label>
              <input type="date" name="toDate" class="input input-bordered" value="<%= filters.toDate %>"/>
            </div>

            <div class="md:col-span-4 flex gap-2">
              <button class="btn btn-sm btn-primary" type="submit">Apply</button>
              <a class="btn btn-sm btn-ghost" href="/grades">Reset</a>
            </div>
          </form>
        </div>
      </div>
    <% } else { %>
      <form method="GET" action="/grades" class="mb-4">
        <label class="label cursor-pointer justify-start gap-3">
          <input type="checkbox" name="onlyMineToday" value="1" class="checkbox" <%= filters.onlyMineToday ? 'checked' : '' %> />
          <span class="label-text">Only what I added today</span>
        </label>
        <button class="btn btn-sm btn-primary" type="submit">Apply</button>
      </form>
    <% } %>

    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Date</th>
            <th>Project</th>
            <th>Serial</th>
            <th>Brand</th>
            <th>Model</th>
            <th>CPU</th>
            <th>RAM</th>
            <th>SSD</th>
            <th>Touch</th>
            <th>Observations</th>
            <th>Technician</th>
          </tr>
        </thead>
        <tbody>
          <% grades.forEach(g => { %>
            <tr>
              <td><%= new Date(g.createdAt).toLocaleString() %></td>
              <td>
                <% if (g.Project) { %>
                  <%= g.Project.projectName %> (<%= g.Project.deviceType %>)
                <% } else { %>
                  -
                <% } %>
              </td>
              <td class="font-semibold"><%= g.serialNumber %></td>
              <td><%= g.brand || '-' %></td>
              <td><%= g.model || '-' %></td>
              <td><%= g.cpu %></td>
              <td><%= g.ramGb %>GB</td>
              <td><%= g.ssdGb %>GB</td>
              <td><%= g.touchStatus || (g.touchscreen ? 'TOUCH' : 'NO_TOUCH') %></td>
              <td style="max-width: 320px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                <%= g.observations || '' %>
              </td>
              <td><%= g.User ? g.User.userName : '-' %></td>
            </tr>
          <% }); %>

          <% if (!grades || grades.length === 0) { %>
            <tr><td colspan="11">No records found.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
